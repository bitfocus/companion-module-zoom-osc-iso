{
	"name": "zoom-osc-iso",
	"version": "3.0.11",
	"main": "dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-zoom-osc-iso.git"
	},
	"scripts": {
		"dev": "yarn build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts",
		"postinstall": "yarn build",
		"test": "jest"
	},
	"license": "MIT",
	"dependencies": {
		"@companion-module/base": "~1.0.2",
		"lodash": "^4.17.21",
		"osc": "^2.4.3"
	},
	"devDependencies": {
		"@companion-module/tools": "^0.5.2",
		"@types/jest": "^27.4.0",
		"@types/lodash": "^4.14.178",
		"@types/node": "^17.0.12",
		"husky": "^7.0.4",
		"jest": "^27.4.7",
		"lint-staged": "^12.3.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.3",
		"typescript": "^4.5.5"
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts}": [
			"yarn lint --fix --",
			"git add"
		]
	},
	"eslintIgnore": [
		"/tests/*.test.ts"
	]
}
