{
	"name": "zoom-osc-iso",
	"version": "3.15.0",
	"main": "dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-zoom-osc-iso.git"
	},
	"scripts": {
		"prepare": "husky install",
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "yarn build && companion-module-build",
		"dev": "yarn build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg",
		"lint": "yarn lint:raw ."
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"dependencies": {
		"@companion-module/base": "~1.8.0",
		"@types/got": "^9.6.12",
		"got-cjs": "^12.5.4",
		"osc": "^2.4.3"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.5.0",
		"@types/node": "^20.0.0",
		"husky": "^9.0.10",
		"lint-staged": "^15.2.2",
		"rimraf": "^5.0.1",
		"typescript": "^5.3.3"
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	}
}
